{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lerna run --parallel precommit"
    }
  },
  "scripts": {
    "start": "lerna run --parallel start",
    "dev": "concurrently \"yarn run start\" \"yarn run compose\"",
    "test": "lerna run --parallel test",
    "compose": "yarn run compose:build && yarn run compose:up",
    "compose:up": "docker-compose -p ocrvs up",
    "compose:down": "docker-compose -p ocrvs down",
    "compose:build": "docker-compose build"
  },
  "devDependencies": {
    "@types/dotenv": "^4.0.3",
    "concurrently": "^3.5.1",
    "lerna": "^2.11.0",
    "lint-staged": "^7.1.0",
    "prettier": "^1.12.1",
    "husky": "1.0.0-rc.8"
  }
}
