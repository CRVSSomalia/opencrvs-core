{
  "name": "gateway",
  "version": "1.0.0",
  "description": "OpenCRVS API Gateway with GraphQL",
  "scripts": {
    "docker:logs": "docker-compose logs",
    "docker:ps": "docker-compose ps",
    "docker:start": "docker-compose up",
    "docker:stop":
      "docker-compose -f docker-compose.yml down -v --remove-orphans",
    "nodemon:build":
      "nodemon --exec ./node_modules/.bin/ts-node -- ./src/index.ts",
    "start": "npm run nodemon:build",
    "precommit": "lint-staged",
    "test":
      "NODE_ENV=test nyc --reporter=lcov --require ts-node/register tape test/**/*.spec.{ts,js} | tap-spec"
  },
  "nyc": {
    "include": ["src/**/*.ts"],
    "extension": [".ts"]
  },
  "dependencies": {
    "@types/lodash": "^4.14.108",
    "apollo-server-hapi": "^1.3.6",
    "glue": "^5.0.0",
    "good": "^8.1.1",
    "good-console": "^7.1.0",
    "good-squeeze": "^5.1.0",
    "graphql": "^0.13.2",
    "graphql-import": "^0.5.2",
    "graphql-tools": "^3.0.1",
    "hapi": "^17.4.0",
    "hapi-boom-decorators": "^3.0.0",
    "hapi-swagger": "^7.7.0",
    "hapijs-status-monitor": "^0.6.0",
    "inert": "^4.2.1",
    "joi": "^10.6.0",
    "lint-staged": "^7.1.0",
    "lodash": "^4.17.10",
    "mongoose": "^5.1.1",
    "nedb": "^1.8.0",
    "vision": "^4.1.1",
    "winston": "^2.3.1",
    "winston-daily-rotate-file": "^1.4.6"
  },
  "devDependencies": {
    "@types/code": "^4.0.3",
    "@types/dotenv": "^4.0.2",
    "@types/glue": "^5.0.3",
    "@types/graphql": "^0.13.1",
    "@types/hapi": "^16.1.6",
    "@types/joi": "^10.4.0",
    "@types/mongoose": "^5.0.13",
    "@types/nedb": "^1.8.3",
    "@types/node": "^8.0.6",
    "@types/tape": "^4.2.31",
    "@types/winston": "^2.3.3",
    "dotenv": "^4.0.0",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "husky": "^0.14.3",
    "lab": "^15.1.2",
    "lab-transform-typescript": "^3.0.1",
    "nodemon": "^1.11.0",
    "nyc": "^11.3.0",
    "pre-commit": "^1.2.2",
    "prettier": "1.12.1",
    "pretty-quick": "^1.4.1",
    "tap-spec": "^4.1.1",
    "tape": "^4.8.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.4.3",
    "tslint-config-prettier": "^1.12.0",
    "typescript": "^2.4.1",
    "typestyle": "^1.3.7"
  },
  "lint-staged": {
    "src/**/*.ts": ["pretty-quick --staged", "tsc", "git add"]
  },
  "keywords": ["api", "nodejs", "hapi", "typescript"]
}
