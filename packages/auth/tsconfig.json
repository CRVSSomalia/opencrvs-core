{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": { "@auth/*": ["./*"] },
    "target": "es6",
    "module": "commonjs",
    "outDir": "build/dist",
    "sourceMap": true,
    "moduleResolution": "node",
    "rootDir": ".",
    "lib": ["esnext.asynciterable", "es2015", "es6"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "types": ["jest"]
  },
  "include": ["resources/**/*.ts", "src/**/*.ts", "typings", "tslint-rules"],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "src/setupTests.ts",
    "src/**/*.test.ts",
    "src/tests"
  ]
}
