{
  "name": "@opencrvs/validation",
  "version": "1.0.0-alpha.6",
  "description": "OpenCRVS validation utilities",
  "main": "src/index.js",
  "scripts": {
    "test": "jest --silent && yarn test:compilation",
    "test:watch": "jest --watch",
    "test:compilation": "tsc --noEmit"
  },
  "license": "NONE",
  "private": true,
  "dependencies": {
    "@types/joi": "^14.0.0",
    "country-data": "^0.0.31",
    "joi": "^14.0.6",
    "typescript": "^3.0.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "jest": "24.8.0",
    "ts-jest": "^24.0.2"
  },
  "lint-staged": {
    "src/**/*.{ts,graphql}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node"
  }
}
