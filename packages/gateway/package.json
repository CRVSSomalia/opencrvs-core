{
  "name": "@opencrvs/gateway",
  "version": "1.0.0",
  "description": "OpenCRVS API Gateway with GraphQL",
  "scripts": {
    "start": "nodemon --exec ts-node -- src/index.ts",
    "start:prod": "ts-node src/index.ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch --coverage",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@types/glob": "^5.0.35",
    "@types/hapi": "^17.0.12",
    "@types/inert": "^5.1.0",
    "@types/lodash": "^4.14.108",
    "@types/node-fetch": "^1.6.9",
    "@types/uuid": "^3.4.3",
    "apollo-server-hapi": "^1.3.6",
    "app-module-path": "^2.2.0",
    "bunyan": "^1.8.12",
    "glob": "^7.1.2",
    "good": "^8.1.1",
    "good-console": "^7.1.0",
    "good-squeeze": "^5.1.0",
    "graphql": "^0.13.2",
    "graphql-import": "^0.5.2",
    "graphql-tools": "^3.0.1",
    "hapi": "^17.4.0",
    "hapi-boom-decorators": "^3.0.0",
    "hapi-swagger": "^9.1.1",
    "hapijs-status-monitor": "^0.6.0",
    "inert": "^5.1.0",
    "joi": "^10.6.0",
    "lint-staged": "^7.1.0",
    "lodash": "^4.17.10",
    "mongoose": "^5.1.1",
    "nedb": "^1.8.0",
    "node-fetch": "^2.1.2",
    "uuid": "^3.2.1",
    "vision": "^5.3.2"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.4",
    "@types/code": "^4.0.3",
    "@types/dotenv": "^4.0.2",
    "@types/graphql": "^0.13.1",
    "@types/jest": "^22.2.3",
    "@types/joi": "^10.4.0",
    "@types/mongoose": "^5.0.13",
    "@types/nedb": "^1.8.3",
    "@types/node": "^8.0.6",
    "@types/vision": "^5.3.2",
    "dotenv": "^4.0.0",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "jest": "^22.4.4",
    "lab": "^15.1.2",
    "lab-transform-typescript": "^3.0.1",
    "nodemon": "^1.11.0",
    "nyc": "^11.3.0",
    "pre-commit": "^1.2.2",
    "prettier": "1.12.1",
    "pretty-quick": "^1.4.1",
    "ts-jest": "^22.4.6",
    "ts-node": "^3.3.0",
    "tslint": "^5.4.3",
    "tslint-config-prettier": "^1.12.0",
    "typescript": "^2.4.1",
    "typestyle": "^1.3.7"
  },
  "lint-staged": {
    "src/**/*.{ts,graphql}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node"
  },
  "keywords": [
    "api",
    "nodejs",
    "hapi",
    "typescript"
  ]
}
