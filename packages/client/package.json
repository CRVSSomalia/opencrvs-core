  "lint-staged": {
    "src/**/*.{ts,tsx,json}": [
      "prettier --write",
      "tslint",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/node": "^10.0.8",
    "@types/react": "^16.3.14",
    "@types/react-dom": "^16.0.5",
    "prettier": "^1.12.1",
    "typescript": "^2.8.3"
  }
}
