{
  "name": "@opencrvs/client",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@opencrvs/components": "^0.1.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-scripts-ts": "2.16.0"
  },
  "scripts": {
