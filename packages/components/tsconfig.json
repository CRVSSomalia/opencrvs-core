{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "lib/",
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": false,
    "declaration": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src/components",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false
  },
  "exclude": [
    "node_modules",
    "lib"
  ]
}
